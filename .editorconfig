# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[{*.js, *.ts}]
indent_size = 4

[{*.scss, *.css}]
indent_size = 4

[*.html]
indent_size = 4

[*.rst]
indent_size = 3
max_line_length = 80

[{*.yaml, *.yml}]
indent_size = 2

[*.json]
indent_size = 4

[{*.typoscript, *.tsconfig, *.ext_typoscript_*}]
indent_size = 4

[{*.xlf, *.xml}]
indent_style = tab
max_line_length = 99999

[*.sql]
indent_style = tab
indent_size = 2

[.htaccess]
indent_style = tab
